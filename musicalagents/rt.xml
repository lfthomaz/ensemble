	<MUSICAL_AGENT NAME="Guitarist" CLASS="MUSICIAN">
		<ARG NAME="arg1" VALUE="bla1" />
		<ARG_COMP COMP="Legs" NAME="pos" VALUE="(50;10;0)" />
		<ARG_COMP COMP="Legs" NAME="vel" VALUE="(1;-3;0)" />
		<FACT NAME="filename" VALUE="Guitar_44_16.wav" />
	</MUSICAL_AGENT>

	<MUSICAL_AGENT NAME="Listener_1" CLASS="LISTENER">
		<ARG_COMP COMP="Legs" NAME="pos" VALUE="(0;2;0)" />
		<ARG_COMP COMP="Legs" NAME="vel" VALUE="(2;1;0)" />
		<ARG_COMP COMP="AudioReasoning" NAME="channel" VALUE="LEFT" />
	</MUSICAL_AGENT>

	<MUSICAL_AGENT NAME="Listener_2" CLASS="LISTENER">
		<ARG_COMP COMP="Legs" NAME="pos" VALUE="(0;-2;0)" />
