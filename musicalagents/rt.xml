	<MUSICAL_AGENT NAME="Drummer" CLASS="MUSICIAN">
		<ARG_COMP COMP="Legs" NAME="pos" VALUE="(-10;0;0)" />
		<ARG_COMP COMP="Legs" NAME="vel" VALUE="(2;0;0)" />
