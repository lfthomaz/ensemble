<ENSEMBLE NAME="Jack Test">

	<GLOBAL_PARAMETERS CLOCK_MODE="CLOCK_CPU" PROCESS_MODE="REAL_TIME" />
	
  	<!-- ********** ENVIRONMENT AGENT ********** -->

	<ENVIRONMENT_AGENT_CLASS NAME="ENVIRONMENT" CLASS="ensemble.EnvironmentAgent">
		<WORLD CLASS_WORLD="ensemble.world.World">
			<LAW CLASS="ensemble.movement.MovementLaw" />
			<ARG NAME="dimensions" VALUE="3" />
			<ARG NAME="structure" VALUE="continuous" />
			<ARG NAME="form" VALUE="cube:200:loop" />
			<ARG NAME="friction_coefficient" VALUE="0.25" />
		</WORLD>
		<EVENT_SERVER CLASS="ensemble.audio.AudioEventServer" COMM="ensemble.comm.direct.CommDirect" PERIOD="100 50 80 1000">
			<ARG NAME="SPEED_SOUND" VALUE="343.3" />
			<ARG NAME="REFERENCE_DISTANCE" VALUE="1.0" />
			<ARG NAME="ROLLOF_FACTOR" VALUE="1.0" />
		</EVENT_SERVER>
	</ENVIRONMENT_AGENT_CLASS>
	
  <!-- ********** MUSICAL AGENT CLASSES ********** -->

	<MUSICAL_AGENT_CLASS NAME="MUSICIAN" CLASS="ensemble.MusicalAgent">
		<KB>
			<FACT NAME="filename" VALUE="" PUBLIC="false" />
		</KB>
		<COMPONENTS>
			<REASONING NAME="AudioReasoning" CLASS="ensemble.audio.file.AudioFileInputReasoning" />
			<ACTUATOR NAME="Mouth" CLASS="ensemble.Actuator" EVENT_TYPE="AUDIO" COMM="ensemble.comm.direct.CommDirect" />
		</COMPONENTS>
	</MUSICAL_AGENT_CLASS>
	
	<MUSICAL_AGENT_CLASS NAME="LISTENER" CLASS="ensemble.MusicalAgent">
		<COMPONENTS>
			<REASONING NAME="AudioReasoning" CLASS="ensemble.audio.jack.JACKOutputReasoning" />
			<SENSOR NAME="ear_left" CLASS="ensemble.Sensor" EVENT_TYPE="AUDIO" COMM="ensemble.comm.direct.CommDirect" POSITION="(-2;0;0)"/>
			<SENSOR NAME="ear_right" CLASS="ensemble.Sensor" EVENT_TYPE="AUDIO" COMM="ensemble.comm.direct.CommDirect" POSITION="(2;0;0)"/>
		</COMPONENTS>
	</MUSICAL_AGENT_CLASS>
	
	<MUSICAL_AGENT_CLASS NAME="PLAYER" CLASS="ensemble.MusicalAgent">
		<COMPONENTS>
			<REASONING NAME="AudioReasoning" CLASS="ensemble.audio.jack.JACKInputReasoning" />
			<SENSOR NAME="mouth" CLASS="ensemble.Actuator" EVENT_TYPE="AUDIO" COMM="ensemble.comm.direct.CommDirect" POSITION="(0;0;0)"/>
		</COMPONENTS>
	</MUSICAL_AGENT_CLASS>

  <!-- ********** MUSICAL AGENT INSTANCES ********** -->

	<!-- 
	<MUSICAL_AGENT NAME="Sine" CLASS="MUSICIAN">
		<FACT NAME="filename" VALUE="media/Sine_440_10s.wav" />
	</MUSICAL_AGENT>
 	-->
 	 
	<MUSICAL_AGENT NAME="Listener_1" CLASS="LISTENER">
		<ARG NAME="POSITION" VALUE="(1;1;0)" />
		<ARG_COMP COMP="AudioReasoning" NAME="mapping" VALUE="ear_left-system:playback_1;ear_right-system:playback_2" />
	</MUSICAL_AGENT>

	<MUSICAL_AGENT NAME="Listener_2" CLASS="LISTENER">
		<ARG NAME="POSITION" VALUE="(1;1;0)" />
		<ARG_COMP COMP="AudioReasoning" NAME="mapping" VALUE="ear_left-pure_data_0:input0;ear_right-pure_data_0:input1" />
	</MUSICAL_AGENT>

	<MUSICAL_AGENT NAME="Player_1" CLASS="PLAYER">
		<ARG_COMP COMP="AudioReasoning" NAME="mapping" VALUE="mouth-pure_data_0:output0" />
	</MUSICAL_AGENT>

	<MUSICAL_AGENT NAME="Player_2" CLASS="PLAYER">
		<ARG_COMP COMP="AudioReasoning" NAME="mapping" VALUE="mouth-pure_data_0:output1" />
	</MUSICAL_AGENT>

</ENSEMBLE>